//-----------------------------------------------------
// Context Constructors
//-----------------------------------------------------

context:new[] = Ctx ->
   context(Ctx).

alloc_context:new[] = ACtx ->
   alloc_context(ACtx).

lang:constructor(`context:new).
lang:constructor(`alloc_context:new).

